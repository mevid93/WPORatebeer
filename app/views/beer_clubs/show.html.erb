
<h2>
  <%= @beer_club.name %> <%= @beer_club.city %>
</h2>

<p>
  Founded 
  <%= @beer_club.founded %>
</p>

<h3>Members</h3>

<ul>
    <% @beer_club.members.each do |member| %>
        <li><%= link_to member.username, user_path(member.id) %> </li>
    <% end %>
</ul>

<% if current_user && current_user.memberships.where(beer_club_id: @beer_club.id).empty? %>

  <%= form_for(@membership) do |f| %>
    <%= f.hidden_field :beer_club_id, value: @beer_club.id %>
    <%= f.submit value: "join the club" %>
  <% end %>

<% end %>

<% if current_user && !current_user.memberships.where(beer_club_id: @beer_club.id).empty? %>

  <%= form_for(@membership, method: "delete") do |f| %>
    <%= f.hidden_field :beer_club_id, value: @beer_club.id %>
    <%= f.submit value: "end the membership" %>
  <% end %>

<% end %>

<%= link_to('Edit', edit_beer_club_path(@beer_club), class:"btn btn-primary") if current_user %>
</br>
<%= link_to('Destroy', @beer_club, {class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } }) if current_user %>
