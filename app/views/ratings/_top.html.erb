<h3>Best <%= title %></h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>average</th>
    </tr>
  </thead>

  <tbody>
    <% list.each do |item| %>
      <tr>
        <td><%= link_to item.name, item %></td>
        <td><%= item.average_rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>