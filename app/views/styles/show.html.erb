
<h2><%= @style.name %></h2>

<p>
<%= @style.description %>
</p>

<h3>beers</h3>

<ul>
    <% @style.beers.each do |beer| %>
        <li> <%= link_to beer.name, beer_path(beer.id) %> by <%= link_to beer.brewery.name, brewery_path(beer.brewery.id) %> </li>
    <% end %>
</ul>

<p>
    <%= link_to "Edit", edit_style_path if current_user %>
    <%= link_to 'Destroy', @style, method: :delete, data: { confirm: "Are you sure?" } if current_user %>
</p> 