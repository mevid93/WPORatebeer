<p id="notice"><%= notice %></p>

<h2><%= @user.username %></h2>

<p>
  Has <%= pluralize(@user.ratings.count, 'rating') %>, average <%= @user.average_rating %>
</p>

<% if not @user.beer_clubs.empty? %>
  <p>member of </p>
  <% @user.beer_clubs.each do |beer_club| %>
    &bull; <%= link_to beer_club.name, beer_club %> </br>
  <% end %>
<% end %>

<% if not @user.ratings.empty? %>
  <h3> ratings </h3>
  <ul>
    <% @user.ratings.each do |rating| %>
        <li>
         <%= rating %> 
         <% if @user == current_user %>
          <%= link_to 'Delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
         <% end %>
        </li>
    <% end %>
  </ul>
<% end %>

<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<td><%= link_to 'Delete', @user, method: :delete, data: { confirm: "Are you sure?" } %></td> |
<% end %>
<%= link_to 'Back', users_path %>
