
<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <% if user.closed? && current_user && current_user.admin? %>
          <td><span class="badge badge-info">account closed</span></td>
        <% end %>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
