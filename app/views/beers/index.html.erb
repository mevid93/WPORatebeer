
<h1>Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= Style.find(beer.style_id).name %></td>
        <td><%= link_to Brewery.find_by(id: beer.brewery_id).name, brewery_path(beer.brewery_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path) if current_user %>

<p> <%= link_to 'List of breweries', breweries_path %> </p>
