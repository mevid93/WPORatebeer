
<h2>
  <%= @brewery.name %>
</h2>


<em>
  Established in 
  <%= @brewery.year %>
</em>


<p> Number of beers <%= @brewery.beers.count %> </p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
</p>

<p>
  Has <%= pluralize(@brewery.ratings.count, 'rating') %>
  <% if @brewery.ratings.count > 0 %>
    , average <%= @brewery.average_rating %>
  <% end %>
</p>

<%= link_to('Edit', edit_brewery_path(@brewery), class:"btn btn-primary") if current_user %> 
<%= link_to('Destroy', @brewery, {class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }}) if current_user %> 
<%= link_to 'Back', breweries_path %>
