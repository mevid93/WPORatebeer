
<p>
  <h2><%= @brewery.name %></h2>
</p>

<p>
  <i>Established in <%= @brewery.year %></i>
</p>

<p>
  Number of beers 
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
</p>

<p>
  Has <%= pluralize(@brewery.ratings.count, 'rating') %>
  <% if @brewery.ratings.count > 0 %>
    , average <%= @brewery.average_rating %>
  <% end %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery) if current_user %> 
<%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' } if current_user %> 
<%= link_to 'Back', breweries_path %>
